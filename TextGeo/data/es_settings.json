{
    "settings" : {
        "number_of_shards" : 30,
        "number_of_replicas" : 1,
        "index.requests.cache.enable": true,
    "analysis": {
        "filter": {
            "tokenlength": {"type":"length", "min":"5"}
        },
        "analyzer":{
            "tokenLengthAnalyzer":{
                "filter":["tokenlength"],
                "tokenizer":"standard"}
        }
    }
    },
    "mappings" : {
        "properties" : {
          "id" : {"type" : "integer"},
          "name" : {"type" : "text", "fields": {"raw": {"type": "keyword"}}},
          "asciiname" : {"type" : "text", "fields": {"raw": {"type": "keyword"}}},
          "alternatenames" : {"type": "keyword"},
          "coordinates" : {"type" : "geo_point"},
          "featureClass" :  {"type" : "text"},
          "featureCode" : {"type" : "text"},
          "countryCode" : {"type" : "text"},
          "cc2" :  {"type" : "keyword"},
          "admin1" : {"type": "text"},
          "admin2" : {"type": "text"},
          "admin3" : {"type": "text"},
          "admin4" : {"type": "text"},
          "population" : {"type" :  "long"},
          "elevation" : {"type" :  "long"},
          "dem" : {"type":  "long"},
          "timzeone" :  {"type" : "text",
                         "index":  "false"},
          "modification_date" : {"type" : "date",
                                 "format": "date",
                                 "index": "false"}
          }
   }
}
